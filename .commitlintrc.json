{
  "extends": [
    "@commitlint/config-conventional"
  ],
  "rules": {
    "scope-empty": [2, "never"],
    "scope-enum": [2, "always", [
      "root",
      "all",
      "libraries",
      "decidables-elements",
      "decidables-site",
      "accumulable-math",
      "accumulable-elements",
      "detectable-math",
      "detectable-elements",
      "prospectable-math",
      "prospectable-elements",
      "discountable-math",
      "discountable-elements",
      "sites",
      "decidables",
      "accumulable",
      "detectable",
      "prospectable",
      "discountable"
    ]]
  }
}
