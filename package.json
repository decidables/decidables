    "postinstall": "husky install",
    "lint": "yarn gulp lint && yarn workspaces foreach -pitv -j 2 run lint",
    "test": "yarn workspaces foreach -pitv -j 1 run test",
    "compile": "yarn workspaces foreach -pitv -j 2 run compile",
    "watch": "yarn workspaces foreach -pitv -j 2 run watch",
    "build": "yarn workspaces foreach -pitv -j 2 run build",
    "changed": "lerna changed -a",
    "version": "lerna version --conventional-commits --create-release github",
    "release": "lerna publish from-git --no-private --otp $@",
    "deploy": "yarn workspaces foreach -pitv -j 2 run deploy",
    "serve": "gulp serveAll"
  },
  "workspaces": [
    "libraries/*",
    "sites/*"
  ],
